{
    "files.associations": {
        "grlib.h": "c",
        "logo.h": "c",
        "application.h": "c",
        "app.h": "c",
        "host_uart.h": "c",
        "memory_map.h": "c"
    },
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyFunction": true,
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.namespace": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.type": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.lambda": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "sameLine",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "cmake.generator": "Unix Makefiles",
    // "cmake.generator": "Ninja",
    "cmake.configureArgs": [
        "-DTIVA_VARIANT=tm4c129encpdt",
        "-DADD_GRAPHICS:BOOL=ON"
    ],
    "cmake.cmakePath": "${workspaceFolder}/xpacks/.bin/cmake",
    "cmake.buildTask": false,
    "cortex-debug.openocdPath": "${workspaceFolder}/xpacks/.bin/openocd",
    "cortex-debug.gdbPath": "${workspaceFolder}/xpacks/.bin/arm-none-eabi-gdb",
    "cortex-debug.registerUseNaturalFormat": false
}